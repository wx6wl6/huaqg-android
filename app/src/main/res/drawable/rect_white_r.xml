<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
     <item android:state_pressed="true"> <!-- pressed -->
	     <shape>
		     <solid android:color="#ffffff"/>
		     <stroke android:width="0.5dp" android:color="#ffe5e5e5"/>
		     <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp"/>
		     <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
		 </shape>	
     </item>     
     <item> <!-- default -->
     	 <shape>
		     <solid android:color="#ffffff"/>
		     <stroke android:width="0.5dp" android:color="#ffe5e5e5"/>
		     <corners android:bottomLeftRadius="5dp" android:bottomRightRadius="5dp" android:topLeftRadius="5dp" android:topRightRadius="5dp"/>
		     <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
		 </shape>
     </item> 
</selector>
