<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"> 
     <item android:state_enabled="false"> <!-- enabled -->
	     <shape>
		     <solid android:color="@color/white_gray"/>
		     <stroke android:width="0dp" android:color="#179e51"/>
		     <corners android:radius="50dip"/>
		     <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
		 </shape>	
     </item> 
     <item android:state_pressed="true"> <!-- pressed -->
	     <shape>
		     <solid android:color="@color/white_gray"/>
		     <stroke android:width="0dp" android:color="#179e51"/>
		     <corners android:radius="50dip"/>
		     <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
		 </shape>	
     </item>     
     <item> <!-- default -->
     	 <shape>
		     <solid android:color="@color/white_gray"/>
		     <stroke android:width="0dp" android:color="#27ae61"/>
		     <corners android:radius="50dip"/>
		     <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
		 </shape>
     </item> 
</selector>