<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/layout_style_mmv"
    android:background="@color/white_gray">

    <LinearLayout style="@style/layout_style_mwv"
        android:background="@drawable/bg_white_r10"
        android:paddingTop="15dp" android:paddingBottom="15dp"
        android:paddingRight="5dp" android:paddingLeft="10dp" android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp">
        <RelativeLayout style="@style/layout_style_mwh">
            <LinearLayout
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout style="@style/layout_style_mwh" android:layout_marginTop="0dp"
                    android:layout_marginRight="70dp">
                    <TextView
                        android:id="@+id/tv_order_no" android:layout_width="0dp" android:layout_weight="1"
                        style="@style/textview_style_gray13"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="订单编号：4564564646" />
                </LinearLayout>
                <TextView android:layout_width="match_parent"
                    android:id="@+id/tv_brand" android:layout_marginTop="5dp"
                    style="@style/textview_style_gray14"  android:layout_marginRight="70dp"
                    android:maxLines="1" android:singleLine="true"
                    android:text="车辆型号：张三额" />

                <LinearLayout style="@style/layout_style_mwh" android:layout_marginTop="5dp"
                    android:layout_marginRight="75dp">
                    <TextView android:id="@+id/tv_car_number" style="@style/textview_style_gray13"
                        android:layout_width="0dp" android:layout_weight="1" android:layout_marginLeft="0dp"
                        android:layout_height="wrap_content" android:text="车牌号"/>
                </LinearLayout>

                <LinearLayout style="@style/layout_style_mwh" android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp">
                    <TextView android:id="@+id/tv_detail_arr" style="@style/textview_style_gray13"
                        android:layout_width="0dp" android:layout_weight="1"
                        android:layout_height="wrap_content" android:text="详细地址："/>
                </LinearLayout>
                <LinearLayout style="@style/layout_style_mwh" android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp">
                    <TextView android:id="@+id/tv_start_time" style="@style/textview_style_gray13"
                        android:layout_width="0dp" android:layout_weight="1"
                        android:layout_height="wrap_content" android:text="发起时间：2017-08-08"/>
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout android:layout_marginTop="5dp" android:id="@+id/rl_mark_finished"
                android:layout_width="70dp"
                android:layout_height="70dp"  android:layout_alignParentRight="true">
                <TextView android:id="@+id/tv_apprise_time" style="@style/textview_style_gray13"
                    android:layout_marginLeft="3dp" android:visibility="gone"
                    android:layout_height="wrap_content" android:text="8-8" android:layout_centerHorizontal="true"/>
                <RelativeLayout style="@style/layout_style_ww" android:layout_marginTop="20dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp" android:layout_centerHorizontal="true"
                        android:scaleType="centerInside" android:src="@drawable/dd_img_js"/>
                    <TextView android:id="@+id/tv_status"
                        style="@style/textview_style_gray14" android:layout_marginTop="20dp"
                        android:text="结束" android:layout_centerInParent="true"/>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

 