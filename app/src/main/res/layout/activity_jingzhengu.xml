       <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rela_pingg_models"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:paddingRight="40dp"
                    android:id="@+id/tv_pingg_models_des"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/header_font"
                    android:textSize="14dp"
                    android:text="品牌车型"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_toRightOf="@+id/tv_pingg_models_des"
                    android:gravity="right"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:id="@+id/tv_pingg_models"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_pingg_brand"
                    android:textColor="@color/pinggu_text_color"
                    android:textSize="14dp"
                    android:text="选择品牌"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/img_pingg_brand"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/go_next_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:background="@color/white_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/rela_pingg_time"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/header_font"
                    android:textSize="14dp"
                    android:text="上牌时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_pingg_time"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_pingg_time"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/pinggu_text_color"
                    android:textSize="14dp"
                    android:text="选择日期"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/img_pingg_time"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/go_next_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:background="@color/white_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/rela_pingg_city"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/header_font"
                    android:textSize="14dp"
                    android:text="上牌城市"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_pingg_city"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/img_pingg_city"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/pinggu_text_color"
                    android:textSize="14dp"
                    android:text="选择城市"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/img_pingg_city"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/go_next_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <View
                android:background="@color/white_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
            <RelativeLayout
                android:id="@+id/rela_pingg_mileage"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/header_font"
                    android:textSize="14dp"
                    android:text="行驶里程"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/pinggu_text_color"
                    android:textSize="14dp"
                    android:text="万公里"
                    android:id="@+id/tv_pingg_mileage"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:inputType="number"
                    android:textCursorDrawable="@null"
                    android:focusable="false"
                    android:imeOptions="actionDone"
                    android:layout_marginRight="10dp"
                    android:textSize="14dp"
                    android:hint="请输入里程数"
                    android:textColor="#ff666666"
                    android:textColorHint="@color/pinggu_text_color"
                    android:layout_toLeftOf="@+id/tv_pingg_mileage"
                    android:gravity="right|center_vertical"
                    android:background="@null"
                    android:id="@+id/et_invest_dialog"
                    android:digits="0123456789."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <Button
                android:layout_gravity="center_horizontal"
                android:id="@+id/btn_pingg"
                android:gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="90dp"
                android:background="@drawable/button_jingzhengu"
                android:textColor="@color/header_background"
                android:textSize="15dp"
                android:text="快速评估"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
