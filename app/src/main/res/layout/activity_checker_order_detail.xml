<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_style_mmv"
    android:id="@+id/ll_main"
    android:background="@color/white_gray">


    <LinearLayout style="@style/layout_style_mmv">
        <include android:id="@+id/title_layout" layout="@layout/layout_top" />

        <LinearLayout style="@style/layout_style_mwh" android:layout_height="40dp" android:layout_marginTop="1dp"
            android:background="@color/white">
            <RelativeLayout style="@style/layout_style_mmv" android:id="@+id/rl_basic_info"
                android:layout_width="0dp" android:layout_weight="1" android:background="@color/white">
                <TextView style="@style/textview_style_black14" android:textColor="@drawable/text_selectable_blue_black"
                    android:id="@+id/tv_basic_info" android:layout_centerInParent="true"
                    android:text="基本信息"/>
                <View android:id="@+id/v_basic_info" style="@style/a_layout_style_hline" android:layout_marginTop="5dp"
                    android:layout_height="2dp" android:background="@color/colorPrimary" android:layout_alignParentBottom="true"/>
                <ImageView android:id="@+id/iv_basic_info_wc" android:src="@drawable/jc_icon_wc" android:scaleType="centerCrop"
                    android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View style="@style/a_layout_style_vline" android:layout_height="match_parent" android:layout_marginTop="5dp" android:layout_marginBottom="4dp"/>
            <RelativeLayout style="@style/layout_style_mmv" android:id="@+id/rl_basic_conf"
                android:layout_width="0dp" android:layout_weight="1" android:background="@color/white">
                <TextView style="@style/textview_style_black14" android:textColor="@drawable/text_selectable_blue_black"
                    android:id="@+id/tv_basic_conf"  android:layout_centerInParent="true"
                    android:text="基本配置"/>
                <View android:id="@+id/v_basic_conf" style="@style/a_layout_style_hline" android:layout_marginTop="5dp"
                    android:layout_height="2dp" android:background="@color/colorPrimary" android:layout_alignParentBottom="true"/>
                <ImageView android:id="@+id/iv_basic_conf_wc" android:src="@drawable/jc_icon_wc" android:scaleType="centerCrop"
                    android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View style="@style/a_layout_style_vline" android:layout_height="match_parent" android:layout_marginTop="5dp" android:layout_marginBottom="4dp"/>
            <RelativeLayout style="@style/layout_style_mmv" android:id="@+id/rl_check"
                android:layout_width="0dp" android:layout_weight="1" android:background="@color/white">
                <TextView style="@style/textview_style_black14" android:textColor="@drawable/text_selectable_blue_black"
                    android:id="@+id/tv_check" android:layout_centerInParent="true"
                    android:text="检测"/>
                <View android:id="@+id/v_check" style="@style/a_layout_style_hline" android:layout_marginTop="5dp"
                    android:layout_height="2dp" android:background="@color/colorPrimary" android:layout_alignParentBottom="true"/>
                <ImageView android:id="@+id/iv_check_wc" android:src="@drawable/jc_icon_wc" android:scaleType="centerCrop"
                    android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View style="@style/a_layout_style_vline" android:layout_height="match_parent" android:layout_marginTop="5dp" android:layout_marginBottom="4dp"/>
            <RelativeLayout style="@style/layout_style_mmv" android:id="@+id/rl_photo"
                android:layout_width="0dp" android:layout_weight="1" android:background="@color/white">
                <TextView style="@style/textview_style_black14" android:textColor="@drawable/text_selectable_blue_black"
                    android:id="@+id/tv_photo" android:layout_centerInParent="true"
                    android:text="拍照"/>
                <View android:id="@+id/v_photo" style="@style/a_layout_style_hline" android:layout_marginTop="5dp"
                    android:layout_height="2dp" android:background="@color/colorPrimary" android:layout_alignParentBottom="true"/>
                <ImageView android:id="@+id/iv_photo_wc" android:src="@drawable/jc_icon_wc" android:scaleType="centerCrop"
                    android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View style="@style/a_layout_style_vline" android:layout_height="match_parent" android:layout_marginTop="5dp" android:layout_marginBottom="4dp"/>
            <RelativeLayout style="@style/layout_style_mmv" android:id="@+id/rl_after_srv"
                android:layout_width="0dp" android:layout_weight="1" android:background="@color/white">
                <TextView style="@style/textview_style_black14" android:textColor="@drawable/text_selectable_blue_black"
                    android:id="@+id/tv_after_srv" android:layout_centerInParent="true"
                    android:text="售后"/>
                <View android:id="@+id/v_after_srv" style="@style/a_layout_style_hline" android:layout_marginTop="5dp"
                    android:layout_height="2dp" android:background="@color/colorPrimary" android:layout_alignParentBottom="true"/>
                <ImageView android:id="@+id/iv_after_srv_wc" android:src="@drawable/jc_icon_wc" android:scaleType="centerCrop"
                    android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/fragment_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
